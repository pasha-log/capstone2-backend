{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "fullName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "username": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "email": {
        "type": "string",
        "minLength": 6,
        "maxLength": 60,
        "format": "email"
      },
      "bio": {
        "type": "string",
        "minLength": 6,
        "maxLength": 60
      },
      "profileImageURL": {
        "type": "string",
        "minLength": 1,
        "maxLength": 1000
      }
    },
    "additionalProperties": true,
    "required": ["fullName", "username", "email"]
  }
  