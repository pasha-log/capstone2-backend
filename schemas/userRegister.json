{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "Registration Schema",
  "required": [
      "username",
      "password",
      "fullName",
      "email"
  ],
  "properties": {
      "username": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30,
          "title": "The username Schema",
          "examples": [
              "pashathecoder"
          ]
      },
      "password": {
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "title": "The password Schema",
          "examples": [
              "Iloveemily"
          ]
      },
      "fullName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30,
          "title": "The fullName Schema",
          "examples": [
              "Pasha Loguinov"
          ]
      },
      "email": {
          "type": "string",
          "minLength": 6,
          "maxLength": 60,
          "title": "The email Schema",
          "examples": [
              "pasha.log@gmail.com"
          ]
      }
  },
  "examples": [{
      "username": "pashathecoder",
      "password": "Iloveemily",
      "fullName": "Pasha Loguinov",
      "email": "pasha.log@gmail.com"
  }]
}